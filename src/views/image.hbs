<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2> {{ image.title }} </h2>
    <button class="btn  btn-danger" id="btn-delete" data-id="{{ image.uniqueId }}"> 
      <i class="fa fa-times"></i>  Eliminar
    </button>
  </div>
  <div class="card-body">
    <p> {{ image.description }}</p>
    <div class="text-center">
      <img src="/public/upload/{{ image.filename }}" alt="" class="img-fluid">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{ image.uniqueId }}">
      <i class="fas fa-thumbs-up"></i> Like 
    </button>
    <p>
      <i class="fas fa-heart"></i>
      <span class="likes-count">{{ image.likes }}</span>
    </p>
    <p>
      <i class="fas fa-eye"></i> {{ image.views }}
    </p>
    <p>
      <i class="far fa-clock"></i>
      {{ timeago image.createdAt }}
    </p>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3> Comentarios </h3>
    <button class="btn btn-info" id="btn-toggle-comment">
      <i class="fas fa-comments"></i> Haz un comentario
    </button>
  </div>
  <div class="card-body">
    <blockquote>
      <form action="/images/{{ image.uniqueId }}/comment" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Nombre" required value="Paola Alapizco">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="email" placeholder="Email" value="paola@paola.com">
        </div>
        <div class="form-group">
          <textarea name="comment" rows="2" class="form-control" placeholder="Comentario" required> Nice! </textarea>
        </div>
        <div class="form-groupp">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i> Comentar
          </button>
        </div>
      </form>
    </blockquote>
  </div>
</div>