<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2> {{ image.title }} </h2>
    <button class="btn  btn-danger" id="btn-delete" data-id="{{ image.uniqueId }}"> 
      Eliminar <i class="fa fa-times"></i> 
    </button>
  </div>
  <div class="card-body">
    <p> {{ image.description }}</p>
    <div class="text-center">
      <img src="/public/upload/{{ image.filename }}" alt="" class="img-fluid">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{ image.uniqueId }}">
      <i class="fas fa-thumbs-up"></i> Like 
    </button>
    <p>
      <i class="fas fa-heart"></i>
      <span class="likes-count">{{ image.likes }}</span>
    </p>
    <p>
      <i class="fas fa-eye"></i> {{ image.views }}
    </p>
    <p>
      <i class="far fa-clock"></i>
      {{ timeago image.createdAt }}
    </p>
  </div>
</div>