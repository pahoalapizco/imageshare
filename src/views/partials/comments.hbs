{{#if sidebar.comments}}
<div class="card">
  <div class="card-header bg-dark text-white">
    <h5>
      <i class="fas fa-comments"></i> Comentarios
    </h5>
  </div>
  <div class="card-body">
    {{#each sidebar.comments}}
    <div class="row mb-2">
      <div class="col">
        <a href="/images/{{ image.uniqueId  }}">
          <img src="/public/upload/{{image.filename}}" alt="{{image.title}}" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      <div class="col">
        <blockquote class="col">
          <p class="lead">{{comment}}</p>
          <footer class="blockquote-footer">
            {{name}} - <i class="far fa-clock"></i> {{ timeago createdAt }}
          </footer>
        </blockquote>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/if}}